  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}/src"
    },
    {
      "name": "chrome-localhost-wsl-to-wsl",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}",
      "sourceMapPathOverrides": {
        "/mnt/c/*": "/__vscode-remote-uri__/mnt/c/*"
      }
    }
  ]
}
